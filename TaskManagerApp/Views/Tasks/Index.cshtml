<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lista de Tarefas</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <h1>Lista de Tarefas</h1>
        <a href="@Url.Action("Create")" class="btn btn-primary">Adicionar Nova Tarefa</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Descrição</th>
                    <th>Concluída</th>
                    <th>Data de Vencimento</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td>@task.Title</td>
                        <td>@task.Description</td>
                        <td>@(task.IsCompleted ? "Sim" : "Não")</td>
                        <td>@task.DueDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = task.Id })" class="btn btn-warning">Editar</a>
                            <a href="@Url.Action("Delete", new { id = task.Id })" class="btn btn-danger">Excluir</a>
                            <a href="@Url.Action("Details", new { id = task.Id })" class="btn btn-info">Detalhes</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>